@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model KeplerCMS.Data.Models.Users
@inject KeplerCMS.Services.Interfaces.ISettingsService SettingsService
@{
    var settings = await SettingsService.GetAll();
    Layout = "_Register";
    ViewData["Title"] = DbRes.T("orange_box_header", "register");
}
@section Steps {
    <div id="steps">
        <img src="~/images/process/step1.gif" alt="1" width="30" height="26">
        <img src="~/images/process/step_right.gif" alt="" width="20" height="26">
        <img src="~/images/process/step2.gif" alt="2" width="30" height="26">
        <img src="~/images/process/step_right.gif" alt="" width="20" height="26">
        <img src="~/images/process/step3.gif" alt="3" width="30" height="26">
        <img src="~/images/process/step_right.gif" alt="" width="20" height="26">
        <img src="~/images/process/step4.gif" alt="4" width="30" height="26">
        <img src="~/images/process/step_right.gif" alt="" width="20" height="26">
        <img src="~/images/process/step5_on.gif" alt="4" width="30" height="26">
    </div>
}

<div class="processbox">
    <div class="headline">
        <div class="headline-content">
            <div class="headline-wrapper">
                <h2>@DbRes.T("done", "register")</h2>
            </div>
        </div>
    </div>
    <div class="content-top">
        <div class="content">
            <div class="content-column1">
                <div class="bubble">
                    <div class="bubble-body">
                        @DbRes.T("done_bubble", "register").Replace("{username}", Model.Username)
                        <div class="clear"></div>
                    </div>
                </div>
                <div class="bubble-bottom">
                    <div class="bubble-bottom-body">
                        <img src="~/images/register/bubble_tail_left.gif" alt="" width="22" height="31">
                    </div>
                </div>
                <div class="frank"><img src="~/images/register/register8.gif" alt="" width="245" height="191"></div>
            </div>
            <div class="content-column2">
                <div class="content-white-outer">
                    <div class="content-white">
                        <div class="content-white-body">
                            <div class="content-white-content">
                                <h4>@DbRes.T("now_a_habbo", "register")</h4>
                                <div id="welcome_bg" style="width: 405px; height:280px; background-image: url(/c_images/album235/hh_welcome.png); ">
                                    <div id="welcome_speech" style="padding-left: 50px; padding-top: 20px; position: absolute">@DbRes.T("speech", "register")</div>
                                    <div id="welcome_avatar" style="padding-left: 0px;padding-top: 0px;position: absolute;margin-left: 70px;margin-top: 90px;">
                                        <img src="@Configuration.GetSection("keplercms")["figureUrl"]?figure=@Model.Figure&amp;action=wlk&amp;direction=0&amp;head_direction=1&amp;gesture=sml&amp;size=b" alt="">
                                    </div>
                                    <div id="hh_welcome_enter" style="padding-left: 0px;padding-top: 55px;position: absolute;margin-left: 170px;margin-top: 120px;">
                                        @{
                                            var downloadableClient = (settings != null) ? settings.FirstOrDefault(s=>s.Setting == "cms.downloadable_client") : null;
                                            if (downloadableClient != null && downloadableClient.Value == "1")
                                            {
                                                <a href="/hotel/download"><img src="~/images/welcome/enter_button.gif" style="height:95px; width:134px;" alt="enter"></a>
                                            }
                                            else
                                            {
                                                <a href='/client' target="client" onclick="redirectNewHabbo(this); return false;"><img src="~/images/welcome/enter_button.gif" style="height:95px; width:134px;" alt="enter"></a>
                                            }
                                        }
                                        
                                    </div>
                                </div>

                                <script>
                                    function redirectNewHabbo(clientTarget) {
                                        openOrFocusHabbo(clientTarget);
                                        window.location.href = "/";
                                    }
                                </script>

                                <div style="margin-top: 10px;">

                                    <table width="100%">
                                        <tr>
                                            <td align="left"><img src="~/c_images/album235/friends_button.png"></td>
                                            <td align="center"><img src="~/c_images/album235/games_button.png"></td>
                                            <td align="right"><img src="~/c_images/album235/party_button.png"></td>
                                        </tr>
                                    </table>

                                </div>
                                <div align="left" style="margin-top: 10px;">
                                    @{
                                        if (downloadableClient != null && downloadableClient.Value == "1")
                                        {
                                            <a href="/hotel/download" class="process-button" style=" width: 0px; height: 0px; padding-top: 2px; padding-bottom: 2px; padding-left: 4px; padding-right: 4px;">@DbRes.T("continue", "register")</a>
                                        }
                                        else
                                        {
                                            <a href="/" class="process-button" style=" width: 0px; height: 0px; padding-top: 2px; padding-bottom: 2px; padding-left: 4px; padding-right: 4px;">@DbRes.T("continue", "register")</a>
                                        }
                                    }
                                    
                                </div>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                    <div class="content-white-bottom">
                        <div class="content-white-bottom-body"></div>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="content-bottom">
        <div class="content-bottom-content"></div>
    </div>
</div>




